{{#unless inline}}
  <button class={{classes.toggleButton}} {{action 'toggleOpen'}}>
    {{#if selectedDate}}
      {{moment-format selectedDate localization.dateFormat}}
    {{else}}
      {{placeholder}}
    {{/if}}
  </button>
{{/unless}}
{{#if showCalendar}}
  <div class="{{classes.calendarContainer}} {{if inline classes.calendarContainerInline}}">
    <div class={{classes.monthHeader}}>
      <button {{action 'gotoPreviousMonth'}}
          class="{{classes.monthButton}}
            {{classes.monthButtonPrevious}}
            {{unless canGotoPreviousMonth classes.monthButtonDisabled}}">
        &lt; {{moment-format previousMonth localization.monthShortFormat}}
      </button>

      <div class={{classes.monthCurrent}}>
        <div class={{classes.monthCurrentDisplay}}>
          {{moment-format currentMonth localization.monthLongFormat}}
        </div>
        <select class={{classes.monthCurrentSelect}} onchange={{action 'gotoMonth' value='target.value'}}>
          {{#each availableMonths as |date|}}
            <option value={{moment-format date 'M'}} selected={{is-equal-month currentMonth date}}>
              {{moment-format date localization.monthLongFormat}}
            </option>
          {{/each}}
        </select>
      </div>

      <select class={{classes.yearCurrent}} onchange={{action 'gotoYear' value='target.value'}}>
        {{#each availableYears as |date|}}
          <option value={{moment-format date 'YYYY'}} selected={{is-equal-year currentYear date}}>
            {{moment-format date 'YYYY'}}
          </option>
        {{/each}}
      </select>

      <button {{action 'gotoNextMonth'}}
          class="{{classes.monthButton}}
            {{classes.monthButtonNext}}
            {{unless canGotoNextMonth classes.monthButtonDisabled}}">
        {{moment-format nextMonth localization.monthShortFormat}} &gt;
      </button>
    </div>
    <div class={{classes.calendarOuter}}>
      {{#if showWeekdays}}
        <div class={{classes.calendarHeader}}>
          {{#each weekdays as |day|}}
            <div class={{classes.calendarHeaderWeekday}}>
              {{day}}
            </div>
          {{/each}}
        </div>
      {{/if}}

      <div class={{classes.calendarInner}}>
        {{#each daysInMonth as |date|}}
          <button class={{date-picker-day-classes classes.day isDisabled=date.disabled isInactive=date.notInCurrentMonth isToday=(is-equal-day date.date today) isSelected=(is-equal-day date.date selectedDate)}}
            {{action 'selectDateString' date.dateString date.disabled}}>
            {{date.day}}
          </button>
        {{/each}}
      </div>
    </div>
  </div>
{{/if}}